{
    "mcpServers": {
        "student_profile": {
                "command": "python",
                "args": ["mcp_servers/student_profile.py"],
                "transport": "stdio"
            },
        "professor_profile": {
                "command": "python",
                "args": ["mcp_servers/professor_profile.py"],
                "transport": "stdio"
            },
        "caculator": {
            "command": "python",
            "args": ["mcp_servers/caculator.py"],
            "transport": "stdio"
            },
            "mcp-server-firecrawl": {
            "command": "npx",
            "args": ["-y", "firecrawl-mcp"],
            "env": {
                "FIRECRAWL_API_URL": "http://localhost:3002"
                },
            "transport": "stdio"
            }
            

    }
}